{
  "name": "typescript-ddd-skeleton",
  "version": "1.0.0",
  "description": "",
  "engines": {
    "node": ">=10.15.0",
    "npm": ">=6.7.0"
  },
  "scripts": {
    "dev": "NODE_ENV=dev ts-node-dev --ignore-watch node_modules --inspect=0.0.0.0:9267 ./src/apps/mooc_backend/server.ts",
    "test": "npm run test:unit && npm run test:features",
    "test:unit": "NODE_ENV=test jest",
    "test:features": "NODE_ENV=test cucumber-js -p default",
    "start": "NODE_ENV=production node dist/src/apps/mooc_backend/server",
    "build": "npm run build:clean && npm run build:tsc && npm run build:di",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "build:di": "copy 'src/**/*.yaml' dist/src",
    "build:clean": "rm -r dist; exit 0"
  },
  "dependencies": {
    "@types/bson": "^4.0.0",
    "@types/compression": "^1.0.1",
    "@types/convict": "^4.2.1",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.17.1",
    "@types/glob": "^7.1.1",
    "@types/helmet": "0.0.44",
    "@types/node": "~11.13.0",
    "@types/uuid": "^3.4.5",
    "@types/uuid-validate": "0.0.1",
    "body-parser": "^1.19.0",
    "bson": "^4.0.2",
    "compression": "^1.7.4",
    "convict": "^5.1.0",
    "copy": "^0.3.2",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "glob": "^7.1.6",
    "helmet": "^3.21.1",
    "http-status": "^1.3.2",
    "mandrill-api": "^1.0.45",
    "node-dependency-injection": "^2.3.5",
    "ts-node": "^8.3.0",
    "typescript": "^3.4.5",
    "uuid": "^3.3.3",
    "uuid-validate": "0.0.3"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.31",
    "@types/cucumber": "^4.0.7",
    "@types/faker": "^4.1.5",
    "@types/jest": "^24.0.18",
    "@types/supertest": "^2.0.8",
    "cucumber": "^6.0.2",
    "faker": "^4.1.0",
    "husky": "^1.3.1",
    "jest": "^24.9.0",
    "lint-staged": "8.2.1",
    "prettier": "^1.16.4",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-node-dev": "^1.0.0-pre.43",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "~1.18.0",
    "tslint-eslint-rules": "^5.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,tests}/**/*.ts": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  }
}
